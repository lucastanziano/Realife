<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.realapp.realife"
    android:id="@+id/addiction_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="left|bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/categoryAddictionImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/dep_soft" />

        <TextView
            android:id="@+id/categoryNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            app:layout_column="0"
            app:layout_columnSpan="5"
            app:layout_gravity="center"
            app:layout_row="0"
            android:text="Tools"
            android:textColor="@color/RealGray"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sadIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/sad_icon" />

        <ProgressBar
            android:id="@+id/positiveBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:layout_gravity="left|top"
            android:progress="50" />

        <ImageView
            android:id="@+id/happyIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/happy_icon" />
    </LinearLayout>

    <!-- android:progressDrawable="@drawable/green_progress" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/app_name_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="App name"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/app_addiction_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Addiction"
            android:textSize="13sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|bottom" >

        <ImageView
            android:id="@+id/imageTexting"
            android:layout_width="@dimen/Circle"
            android:layout_height="@dimen/Circle"
            android:src="@drawable/texting" />

        <ImageView
            android:id="@+id/imageSocial"
            android:layout_width="@dimen/Circle"
            android:layout_height="@dimen/Circle"
            android:src="@drawable/social" />

        <ImageView
            android:id="@+id/imageApps"
            android:layout_width="@dimen/Circle"
            android:layout_height="@dimen/Circle"
            android:src="@drawable/apps" />

        <ImageView
            android:id="@+id/imageWWW"
            android:layout_width="@dimen/Circle"
            android:layout_height="@dimen/Circle"
            android:src="@drawable/www" />

        <ImageView
            android:id="@+id/imageGaming"
            android:layout_width="@dimen/Circle"
            android:layout_height="@dimen/Circle"
            android:src="@drawable/game" />
    </LinearLayout>

</LinearLayout>